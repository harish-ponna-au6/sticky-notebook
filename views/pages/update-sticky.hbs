<style>
    textarea:focus,
    textarea.form-control:focus,
    input.form-control:focus,
    input[type=text]:focus,
    input[type=password]:focus,
    input[type=email]:focus,
    input[type=number]:focus,
    [type=text].form-control:focus,
    [type=password].form-control:focus,
    [type=email].form-control:focus,
    [type=tel].form-control:focus,
    [contenteditable].form-control:focus {
        box-shadow: inset 0 -1px 0 #ddd;
    }

    textarea:focus,
    input:focus {
        outline: none;
    }

    input,
    textarea {
        background-color: transparent;
        border: 0;
        border-bottom: black 2px solid;
        border-radius: 0;
        color: black;
        font-size: 18px;
        font-weight: 700;
        letter-spacing: 2px;
    }


    @media only screen and (max-width: 550px) {
        #updating-sticky {
            position: absolute;
            right: 10px;
        }
    }

    @media only screen and (max-width: 900px) {

        #title,
        #body {
            margin: 0;
        }
    }

</style>
<div class="container">

    <div class="row">
        <div class="text-center mt-3 " style="background-color: {{color4}};transform:{{deg3}}; width: 100px;">
            <div><img src="hand-pin.png" class="img-fluid" alt="Responsive image" style="height: 10px;width: 10px;">
            </div>
            <a style="text-decoration: none;color:black" href="/dashboard" style="color:black"><i class=" text-center fas fa-angle-double-left "
                    style="color:use"></i></span><span style="margin-left: 15px;">Back</span> </a>
        </div>
           <div id="updating-sticky" class="text-center offset-5 mt-3" style="transform:{{deg6}};width:200px">
            <div style="background-color: {{color0}};">
                <div><img src="hand-pin.png" class="img-fluid" alt="Responsive image" style="height: 10px;width: 10px;">
                </div><span style="font-size: 22px;">Updating a sticky</span>
            </div>
        </div>

    </div>
    <form method="POST" action="/update-sticky/{{note._id}}?_method=PUT">
        <div class="row mt-5">
            <div id="title" class="text-center col-xl-3 col-lg-4 col-md-12 col-sm-12  offset-1  " style="background-color:{{color6}};transform:{{deg5}};height: 120px;">
                <div><img src="hand-pin.png" class="img-fluid" alt="Responsive image" style="height: 10px;width: 10px;">
                </div>
                <h5>Title</h5>
                <input value="{{note.title}}" class="mb-2" style="width: 90%;" type="text" name="title" id=""
                    placeholder="Enter Title for your sticky">
            </div>
            <div id="body" class="mt-2 text-center col-xl-6 col-lg-6 col-md-12 col-sm-12 offset-1 " style="background-color:{{color6}};transform:{{deg6}};">
                <div><img src="hand-pin.png" class="img-fluid" alt="Responsive image" style="height: 10px;width: 10px;">
                </div>
                <h5>Body</h5>
                <textarea style="margin-bottom: 20px;" name="body" id="" cols="40" rows="6"
                    placeholder="Enter Your Sticky Body Here">{{note.body}}</textarea>
                <div class="text-center col-2 offset-5" style="transform:{{deg6}};width:200px">
                    <button type="submit" class="btn" style="background-color: {{color7}};">
                        <div><img src="hand-pin.png" class="img-fluid" alt="Responsive image"
                                style="height: 10px;width: 10px;">
                        </div>Update
                    </button>
                </div>


            </div>
        </div>
    </form>
    <div class="row">
        <div class="text-center col-2 offset-5" style="transform:{{deg2}};width:200px">
            <form method="POST" action="/delete-sticky/{{note._id}}?_method=DELETE">
                <button type="submit" class="btn" style="background-color: {{color3}};">
                    <div><img src="hand-pin.png" class="img-fluid" alt="Responsive image"
                            style="height: 10px;width: 10px;">
                    </div>Delete
                </button>
            </form>
        </div>
    </div>
</div>