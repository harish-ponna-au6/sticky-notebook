{{#if userId}}
<style>
    @media only screen and (max-width: 410px) {
        #name {
            visibility: hidden;
        }
    }

    @media only screen and (max-width: 800px) {
        #name {
            margin: 0;
            position: absolute;
            right: 80px;
            width: 100px;
        }

        #logout {
            margin: 0;
            position: relative;
            left: 50px;
        }

    }
</style>

<div class="container-fluid" style="background-color:#433054b0;">
    <div class="row">
        <div class="m-0 ml-3  text-center" style="transform:{{deg0}};background-color: {{color1}}; min-width: 120px;">
            <div><img src="hand-pin.png" class="m-0 img-fluid" alt="Responsive image" style="height: 15px;width: 15px;">
            </div>
            <a href="/dashboard" style="text-decoration: none; color:black"><span style="color: orange;"><i
                        class="fas fa-clipboard fa-2x"></i></span><span
                    style="margin-left:10px;font-size: 25px;font-weight: 500;">Sticky Notes</span></a>
        </div>

        <div id="name" class="ml-auto" style="position: absolute;right:150px">
            <div class="text-center" style="transform:{{deg1}};background-color: {{color2}}; min-width: 120px;">
                <div><img src="hand-pin.png" class="img-fluid" alt="Responsive image" style="height: 15px;width: 15px;">
                </div>
                <h4>Hi! {{userName}}</h4>
            </div>
        </div>
        <div id="logout" class="ml-auto mr-5">
            <div class="text-center" style="transform:{{deg2}};">
                <form method="POST" action="/logout?_method=DELETE">
                    <button type="submit" class="btn" style="background-color: {{color3}};">
                        <div><img src="hand-pin.png" class="img-fluid" alt="Responsive image"
                                style="height: 10px;width: 10px;">
                        </div>Log out
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{{/if}}